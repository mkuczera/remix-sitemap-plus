{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./lib/typescript",
    "emitDeclarationOnly": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",   // Use "node16" for Node.js 16+ compatibility or "nodenext" for Node.js ESM
    "target": "ESNext",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vite": ["node_modules/vite"]
    }
  },
  "include": [
    "src/**/*",
    "examples/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "dist"
  ]
}